<script>

    function createDatatable(u, c, e) {
        return $('.datatable').DataTable({
            processing: true,
            serverSide: true,
            scrollX: true,
            autoWidth: false,

            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json',
            },
            ajax: {
                url: u,
                method: 'GET'
            },
            columns: c,
            
        }).on('draw', e);
    }

</script>